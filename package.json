{
  "name": "@simpleviewinc/tap-events-force",
  "version": "1.0.1",
  "description": "Events Force Tap for the Keg",
  "main": "index.js",
  "author": "Lance Tipton <lancetipton04@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "url": "ssh://git@github.com/simpleviewinc/tap-events-force.git",
    "type": "git"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --no-cache --config=./configs/jest.config.js",
    "android": "cd node_modules/keg-core; yarn android",
    "build:android": "cd node_modules/keg-core; yarn build:android",
    "build:ios": "cd node_modules/keg-core; yarn build:ios",
    "build:web": "cd node_modules/keg-core; yarn build:web",
    "clean": "cd node_modules/keg-core; yarn clean",
    "clean:full": "yarn clean; yarn clean:nm; yarn install",
    "clean:nm": "rimraf ./yarn.lock; rimraf ./package.lock; rimraf node_modules",
    "clean:rn": "yarn keg clean:rn",
    "ios": "cd node_modules/keg-core; yarn ios",
    "start": "cd node_modules/keg-core; expo start",
    "setup": "yarn install; cd node_modules/keg-core; yarn postinstall",
    "web": "cd node_modules/keg-core; yarn web",
    "keg": "cd node_modules/keg-core; yarn",
    "format:eslint": "eslint --config ./configs/eslintrc.config.js . --fix --quiet",
    "format:prettier": "prettier --config ./configs/prettier.config.js --ignore-path .eslintignore --write '**/*.{js,jsx}'",
    "format": "yarn format:prettier && yarn format:eslint",
    "eslint:watch": "onchange '**/*.{js,jsx}' -- eslint --config ./configs/eslintrc.config.js {{changed}} --fix"
  },
  "dependencies": {
    "firebase": "7.7.0",
    "keg-core": "https://github.com/simpleviewinc/keg-core.git#master",
    "qr-reader": "git+https://github.com/mpcarolin/qr-code-scanner.git#master"
  },
  "devDependencies": {
    "app-root-path": "3.0.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.1.0",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-native": "3.8.1",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.10",
    "onchange": "7.0.2",
    "prettier": "2.0.5",
    "rimraf": "^3.0.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --config ./configs/lint-staged.config.js"
    }
  }
}
